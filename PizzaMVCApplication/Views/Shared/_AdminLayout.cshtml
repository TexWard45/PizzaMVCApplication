<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PizzaApplication.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline">Menu</span>
                    </a>
                    <ul class="nav nav-pills flex-column d-table mb-sm-auto mb-0 align-items-center align-items-sm-start w-100" id="menu">
                        <li>
                            <a class="nav-link text-white py-1 align-middle @(@ViewData["Type"].ToString() == "UserGroup" ? "active" : "")" asp-area="" asp-controller="UserGroup" asp-action="Index">
                                <i class="fs-4 bi bi-people-fill"></i> <span class="ms-1 d-none d-sm-inline">Nhóm tài khoản</span>
                            </a>
                        </li>
                        <li>
                            <a class="nav-link text-white py-1 align-middle @(@ViewData["Type"].ToString() == "User" ? "active" : "")" asp-area="" asp-controller="User" asp-action="Index">
                                <i class="fs-4 bi bi-person-fill"></i> <span class="ms-1 d-none d-sm-inline">Tài khoản</span>
                            </a>
                        </li>
                        <li class="w-100">
                            <a class="nav-link text-white py-1 align-middle @(@ViewData["Type"].ToString() == "Category" ? "active" : "")" asp-area="" asp-controller="Category" asp-action="Index">
                                <i class="fs-4 fa-solid fa-grid-2"></i> <span class="ms-1 d-none d-sm-inline">Danh mục</span>
                            </a>
                        </li>
                        <li class="w-100">
                            <a class="nav-link text-white py-1 align-middle @(@ViewData["Type"].ToString() == "Size" ? "active" : "")" asp-area="" asp-controller="Size" asp-action="Index">
                                <i class="fs-4 fa-solid fa-ruler"></i> <span class="ms-1 d-none d-sm-inline">Kích thước</span>
                            </a>
                        </li>
                        <li class="w-100">
                            <a class="nav-link text-white py-1 align-middle @(@ViewData["Type"].ToString() == "Base" ? "active" : "")" asp-area="" asp-controller="Base" asp-action="Index">
                                <i class="fs-4 fa-solid fa-pizza"></i> <span class="ms-1 d-none d-sm-inline">Đế bánh</span>
                            </a>
                        </li>
                        <li class="w-100">
                            <a class="nav-link text-white py-1 align-middle @(@ViewData["Type"].ToString() == "Topping" ? "active" : "")" asp-area="" asp-controller="Topping" asp-action="Index">
                                <i class="fs-4 fa-solid fa-tomato"></i> <span class="ms-1 d-none d-sm-inline">Nhân bánh</span>
                            </a>
                        </li>
                        <li class="w-100">
                            <a class="nav-link text-white py-1 align-middle @(@ViewData["Type"].ToString() == "Pizza" ? "active" : "")" asp-area="" asp-controller="Pizza" asp-action="Index">
                                <i class="fs-4 fa-solid fa-pizza-slice"></i> <span class="ms-1 d-none d-sm-inline">Bánh pizza</span>
                            </a>
                        </li>
                        <li class="w-100">
                            <a class="nav-link text-white py-1 align-middle @(@ViewData["Type"].ToString() == "Order" ? "active" : "")" asp-area="" asp-controller="Order" asp-action="Index">
                                <i class="fs-4 bi bi-clipboard-check-fill"></i> <span class="ms-1 d-none d-sm-inline">Đơn hàng</span>
                            </a>
                        </li>
                        <li class="w-100">
                            <a class="nav-link text-white py-1 align-middle @(@ViewData["Type"].ToString() == "Statistic" ? "active" : "")" asp-area="" asp-controller="Statistic" asp-action="Index">
                                <i class="fs-4 bi bi-bar-chart-fill"></i> <span class="ms-1 d-none d-sm-inline">Thống kê</span>
                            </a>
                        </li>
                    </ul>
                    <hr>
                    <div class="dropdown pb-4">
                        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://github.com/mdo.png" alt="hugenerd" width="30" height="30" class="rounded-circle">
                            <span class="d-none d-sm-inline mx-1">Test</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                            <li><a class="dropdown-item" href="#">New project...</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Sign out</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-column col py-3 min-vh-100 form-child-full-height">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
