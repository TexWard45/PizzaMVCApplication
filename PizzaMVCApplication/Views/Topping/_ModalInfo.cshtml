@model ToppingViewModel
    <div id="InfoCategoryModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <form class="edit-information-form" onsubmit="return false;">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"> Xem nhân bánh</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="fw-bold"> Tên nhân bánh: </div>
                        <div> @Model.Display </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"> Đóng </button>
                    </div>
            </form>
        </div>
    </div>
