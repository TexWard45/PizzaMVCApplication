@model ToppingViewModel
@using (Html.BeginForm("DeleteTopping", "Topping", FormMethod.Post))
{
    <div id="InfoCategoryModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <form class="remove-form" onsubmit="return false;">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"> Xác nhận xóa nhân bánh? </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    
                    <div class="modal-footer">
                        @for (int i = 0; i < Model.arrayId.Count; i++)
                        {
                            @Html.HiddenFor(model => Model.arrayId[i])
                        }
                    <button type="submit" class=" btn btn-danger">
                        Xóa 
                    </button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"> Đóng </button>
                    </div>
                 </div>
            </form>
        </div>
    </div>
}