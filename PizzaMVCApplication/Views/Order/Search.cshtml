@model OrderSearchViewModel

@{
	ViewData["Type"] = "Order";
	ViewData["Title"] = "Tìm kiếm đơn hàng";
}
@{
	Layout = "_AdminLayout";
}


@using (Html.BeginForm("SearchModel", "Order", FormMethod.Get))
{
<div class="d-flex flex-column p-3 h-100">
    <div class="d-flex justify-content-between align-items-center">
        <p class="h3 m-0"> @ViewData["Title"] </p>
        <div>
			<button type="button" class="btn btn-dark" onclick="location.href='@Url.Action("Index", "Order")'"> <i class="fs-5 bi bi-arrow-return-left"></i> </button>
        </div>
    </div>

    <hr />

<div class="mb-auto">
		<div class="mb-3">
			<div class="form-group">
				<label > Ngày bắt đầu </label>
					@Html.EditorFor(model => model.startDay, 
						new { htmlAtrributes = new {
							@readonly = "true", Value = Model.startDay,
							@class ="form-control datepicker"
						}})
			</div>
			<span  class="text-danger"> </span>
		</div>
		<div class="mb-3">
				<div class="form-group">
					<label> Ngày kết thúc </label>
					@Html.EditorFor(model => model.endDay,
						new { htmlAtrributes = new {
							@readonly = "true", Value = Model.startDay,
							@class ="form-control datepicker"
						}})
				</div>
				<span class="text-danger"> </span>
		</div>
		<button type="submit" value="edit" name="buttonType" class="btn btn-primary" style="width: 150px"> Tìm kiếm </button>
    </div>
</div>
}
