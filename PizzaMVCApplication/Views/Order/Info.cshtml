@model OrderInfoViewModel

@{
	ViewData["Title"] = "Admin Page";
	ViewData["Type"] = "Order";
	ViewData["Title"] = "Thông tin đơn hàng";
	ViewData["Column"] = new string[] {
		"Tên",
		"Địa chỉ",
		"Số điện thoại"
	};
}

@{
	Layout = "_AdminLayout";
}

<div class="d-flex flex-column p-3 h-100">
    <div class="d-flex justify-content-between align-items-center">
        <p class="h3 m-0"> @ViewData["Title"] </p>

        <div>
			<button type="button" class="btn btn-dark" onclick="location.href='@Url.Action("Index", "Order")'"> <i class="fs-5 bi bi-arrow-return-left"></i> </button>
        </div>
    </div>

    <hr />

<div class="mb-auto">
		<div class="mb-3">
			<label asp-for="Fullname"> Tên </label>
			<input asp-for="Fullname" class="form-control" readonly />
			<span asp-validation-for="Fullname" class="text-danger"> </span>
		</div>
		<div class="mb-3">
			<label asp-for="Address"> Địa Chỉ </label>
			<input asp-for="Address" class="form-control" readonly/>
			<span asp-validation-for="Address" class="text-danger"> </span>
		</div>
		<div class="mb-3">
			<label asp-for="Phone"> Số điện thoại </label>
			<input asp-for="Phone" class="form-control" readonly />
			<span asp-validation-for="Phone" class="text-danger"> </span>
		</div>
    </div>
</div>