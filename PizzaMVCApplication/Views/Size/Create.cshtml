@model SizeCreateViewModel

@{
	ViewData["Title"] = "Home Page";
	ViewData["Type"] = "Size";
	ViewData["Title"] = "Tạo kích thước";
}

@{
	Layout = "_AdminLayout";
}

<div class="d-flex flex-column p-3 h-100">
    <div class="d-flex justify-content-between align-items-center">
        <p class="h3 m-0"> @ViewData["Title"] </p>

        <div>
			<button type="button" class="btn btn-dark" onclick="location.href='@Url.Action("Index", "Size")'"> <i class="fs-5 bi bi-arrow-return-left"></i> </button>
        </div>
    </div>

    <hr />

    <div class="mb-auto">
        <form method="post">
			<div class="mb-3">
				<label asp-for="Display"> Tên kích thước </label>
				<input asp-for="Display" class="form-control" />
				<span asp-validation-for="Display" class="text-danger"> </span>
			</div>
			<button type="submit" class="btn btn-primary" style="width: 150px"> Tạo </button>
		</form>
    </div>
</div>