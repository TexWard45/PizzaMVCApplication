@model BaseInfoViewModel

@{
	ViewData["Title"] = "Home Page";
	ViewData["Type"] = "Base";
	ViewData["Title"] = "Thông tin đế bánh";
	ViewData["Column"] = new string[] {
		"Mã đế bánh",
		"Tên đế bánh",
	};
}

@{
	Layout = "_AdminLayout";
}

<div class="d-flex flex-column p-3 h-100">
    <div class="d-flex justify-content-between align-items-center">
        <p class="h3 m-0"> @ViewData["Title"] </p>

        <div>
			<button type="button" class="btn btn-dark" onclick="location.href='@Url.Action("Index", "Base")'"> <i class="fs-5 bi bi-arrow-return-left"></i> </button>
        </div>
    </div>

    <hr />

<div class="mb-auto">
		<div class="mb-3">
			<label asp-for="BaseId"> Mã đế bánh </label>
			<input asp-for="BaseId" class="form-control" readonly/>
			<span asp-validation-for="BaseId" class="text-danger"> </span>
		</div>
		<div class="mb-3">
			<label asp-for="Display"> Tên đế bánh </label>
			<input asp-for="Display" class="form-control" readonly/>
			<span asp-validation-for="Display" class="text-danger"> </span>
		</div>
    </div>
</div>