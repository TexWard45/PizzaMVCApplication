@model UserGroupEditViewModel

@{
	ViewData["Title"] = "Home Page";
	ViewData["Type"] = "UserGroup";
	ViewData["Title"] = "Sửa nhóm tài khoản";
	ViewData["Column"] = new string[] {
		"Mã nhóm",
		"Tên nhóm",
	};
}

@{
	Layout = "_AdminLayout";
}

@using (Html.BeginForm("Edit", "UserGroup", FormMethod.Post))
{
<div class="d-flex flex-column p-3 h-100">
    <div class="d-flex justify-content-between align-items-center">
        <p class="h3 m-0"> @ViewData["Title"] </p>

        <div>
			<button type="button" class="btn btn-dark" onclick="location.href='@Url.Action("Index", "UserGroup")'"> <i class="fs-5 bi bi-arrow-return-left"></i> </button>
        </div>
    </div>

    <hr />

<div class="mb-auto">
		<div class="mb-3">
			<label asp-for="GroupId"> Mã nhóm </label>
			<input asp-for="GroupId" class="form-control" readonly/>
			<span asp-validation-for="GroupId" class="text-danger"> </span>
		</div>
		<div class="mb-3">
			<label asp-for="Display"> Tên nhóm </label>
			<input asp-for="Display" class="form-control" />
			<span asp-validation-for="Display" class="text-danger"> </span>
		</div>
		<button type="submit" value="edit" name="buttonType" class="btn btn-primary" style="width: 150px"> Sửa </button>
    </div>
</div>
}