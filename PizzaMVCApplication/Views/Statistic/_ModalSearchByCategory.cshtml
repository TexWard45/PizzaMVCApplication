@model OrderSearchViewModel
@using (Html.BeginForm("SearchCategory", "Statistic", FormMethod.Get))
{
<div id="InfoOrderModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <form class="search-form" onsubmit="return false;">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"> Tìm kiếm đơn hàng </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="fw-bold">
                        <div class="float-start fw-bold"> Ngày bắt đầu </div>
                        <div class="float-end fw-bold"> 
                            @Html.EditorFor(model => model.startDay,
                            new { htmlAtrributes = new {
                            @readonly = "true", Value = Model.startDay,
                            @class ="form-control datepicker"
                            }})
                        </div>          
                    </div>
                    <div class ="fw-bold">
                        <div class="float-start fw-bold"> Ngày kết thúc </div>
                        <div class="float-end fw-bold">
                            @Html.EditorFor(model => model.endDay,
                            new { htmlAtrributes = new {
                            @readonly = "true", Value = Model.endDay,
                            @class ="form-control datepicker"
                            }})
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary"> Tìm kiếm </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"> Đóng </button>
                </div>
        </form>
    </div>
</div>
}