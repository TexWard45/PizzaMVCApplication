@model CategoryViewModel
@using (Html.BeginForm("SearchCategory", "Category", FormMethod.Get))
{
    <div id="InfoCategoryModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <form class="search-form" onsubmit="return false;">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"> Tìm kiếm danh mục bánh pizza </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="fw-bold"> Tên danh mục: </div>
                        @Html.EditorFor(model => model.Display)          
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary"> Tìm kiếm </button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"> Đóng </button>
                    </div>
            </form>
        </div>
    </div>
}