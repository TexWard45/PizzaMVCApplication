@model CategoryViewModel
@using (Html.BeginForm("EditCategory", "Category", FormMethod.Post))
{
    <div id="InfoCategoryModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <form class="edit-form" onsubmit="return false;">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"> Sửa danh mục bánh pizza </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="fw-bold"> Tên danh mục: </div>
                        @Html.EditorFor(model => model.Display)
                        @Html.HiddenFor(model => model.CategoryId)
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class=" btn btn-primary"> Sửa </button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"> Đóng </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}