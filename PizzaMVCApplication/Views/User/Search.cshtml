@model UserSearchViewModel

@{
	ViewData["Title"] = "Home Page";
	ViewData["Type"] = "User";
	ViewData["Title"] = "Tìm kiếm tài khoản";
}

@{
	Layout = "_AdminLayout";
}

@using (Html.BeginForm("SearchModel", "User", FormMethod.Get))
{
<div class="d-flex flex-column p-3 h-100">
    <div class="d-flex justify-content-between align-items-center">
        <p class="h3 m-0"> @ViewData["Title"] </p>

        <div>
			<button type="button" class="btn btn-dark" onclick="location.href='@Url.Action("Index", "User")'"> <i class="fs-5 bi bi-arrow-return-left"></i> </button>
        </div>
    </div>

    <hr />

<div class="mb-auto">
		<div class="mb-3">
			<label asp-for="Username"> Tên tài khoản </label>
			<input asp-for="Username" class="form-control" />
				<span asp-validation-for="Username" class="text-danger"> </span>
		</div>
		<button type="submit" value="edit" name="buttonType" class="btn btn-primary" style="width: 150px"> Tìm kiếm </button>
    </div>
</div>
}